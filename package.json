{
  "name": "haunted-tests",
  "version": "1.0.0",
  "description": "Haunted Tests",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev-web",
    "dev": "npm run dev-web",
    "dev-web": "node ./tasks/dev-web.js",
    "build": "npm run build-web",
    "build-web": "node ./tasks/build-web.js",
    "serve-dist": "node ./tasks/serve-dist",
    "build-docs": "npx typedoc --out ./docs/ ./src --target ES6",
    "lint": "stylelint src/**/*.scss --fix && eslint src/**/*.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{scss}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "John Pray",
  "license": "ISC",
  "alias": {
    "haunted": "./lib/haunted-builds/index.js",
    "haunted-w-microtask": "./lib/haunted-builds/index-w-microtask.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.0.0",
    "@typescript-eslint/parser": "^1.0.0",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "autoprefixer": "^9.4.6",
    "axios": "^0.18.0",
    "browser-sync": "^2.26.3",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-lit": "^0.5.0",
    "font-awesome": "4.6.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "lit-html": "^1.0.0",
    "npm-run-all": "^4.1.3",
    "page": "^1.11.3",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3",
    "sass": "^1.16.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.2"
  },
  "dependencies": {}
}
